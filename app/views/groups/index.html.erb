<div class="container-fluid bg-light-gray py-4">
  <h1 class="col-md-6 offset-md-3 mt-4">Categories</h1>
  <div class="row">
    <div class="col-md-6 offset-md-3 mt-4">
      <ul class="list-group bg-white">
        <% @groups.each do |group| %>
          <li class="list-group-item d-flex align-items-center mb-3">
            <%= image_tag group.icon, class: "img-fluid img-thumbnail me-3", style: "max-width: 50px;" %>
            <%= link_to group.name, group_path(group.id) %>
            <% total = @group_totals[group.id] || 0 %>
            Total Amount: <%= number_to_currency(total) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
