<div class="form-container">
  <div>
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= form_with model: Group.new, local: true do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      <br>
        <%= form.label :icon, "Put the category URL icon" %>
        <%= form.text_field :icon, class: "form-control" %>
      </div>
      <div class="form_button">
      <%= form.submit "Create Category" %>
      </div>
    <% end %>
  </div>
</div>
